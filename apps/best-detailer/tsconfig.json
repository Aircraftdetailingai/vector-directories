{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@vector/db": [
        "../../packages/db/src"
      ],
      "@vector/types": [
        "../../packages/types/src"
      ],
      "@vector/auth": [
        "../../packages/auth/src"
      ],
      "@vector/email": [
        "../../packages/email/src"
      ],
      "@vector/utils": [
        "../../packages/utils/src"
      ],
      "@vector/billing": [
        "../../packages/billing/src"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
